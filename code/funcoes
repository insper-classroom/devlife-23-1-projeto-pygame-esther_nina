import pygame

class Jogo:
    pygame.init()
    def __init__(self):
        self.tamanho_tela =  (300, 500)
        self.cor_fundo =  (22, 40, 77)
        self.bloco_img =  pygame.image.load('img/bloquinho.png')
        self.pedrinha_img =pygame.image.load('img/pedrinha.png')    
        self.window = pygame.display.set_mode(self.infos['tamanho_tela'])

    def atualiza_estado():
        for evento in pygame.event.get():
            if evento.type == pygame.QUIT:
                return False

    def desenha_fundo_base(self):
        self.window.fill(self.cor_fundo)

    def game_loop():
        return

